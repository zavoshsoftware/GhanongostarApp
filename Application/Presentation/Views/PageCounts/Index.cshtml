@model ViewModels.PageCounterViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    @Html.EditorFor(m => m.Date)

    <input type="submit" class="btn btn-success" value="فیلتر"/>


 
@(Html.Kendo().Grid(Model.PageCounts)
      .Name("Grid")
      .Columns(columns =>
      {
          columns.Bound(model => model.Title);
          columns.Bound(model => model.SubTitle);
          columns.Bound(model => model.Count);
        
         
      })     
      .DataSource(dataSource => dataSource
          .Server()
          .Model(model => model.Id(item => item.Title))
      )            .Sortable().Filterable()  
      )

}