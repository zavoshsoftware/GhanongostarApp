@model ViewModels.BlogDetailViewModel
@{
    ViewBag.Title = Model.SiteBlog.Title +" | قانون گستر";
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}

<section class="breadcrumb-area">
	<div class="container-fluid custom-container">
		<div class="row">
			<div class="col-xl-12">
				<div class="bc-inner">
					<p><a href="/">قانون گستر  |</a>
						<a href="/blog/@Model.SiteBlog.SiteBlogCategory.UrlParam">@Model.SiteBlog.SiteBlogCategory.Title |</a>	
					@Model.SiteBlog.Title
					</p>
				</div>
			</div>
		</div>
	</div>
</section>


<section class="main-product pad-45">
	<div class="container">
		<div class="row">
			<!-- single product -->
			<div class="col-lg-8 col-xl-8">
				<article class="sin-blog single-page">
					<figure class="blog-img">
						<img src="https://ghanongostar.zavoshsoftware.com/@Model.SiteBlog.ImageUrl" alt="@Model.SiteBlog.Title">
					</figure>
					<div class="blog-content">
						<div class="blog-meta">
							<a href="#">@Model.SiteBlog.CreationDateStr</a>
						</div>
						<h1>@Model.SiteBlog.Title</h1>
						<div class="blog-details">
							@Html.Raw(Model.SiteBlog.Body)
						</div>
						
						
						
						<div class="row">
							<div class="col-lg-12 col-xl-12">
								<!-- Product View Slider -->
								<div class="quickview-slider">
									<div class="slider-for">
										@foreach (var image in Model.SiteBlogImages)
										{
											<div class="">
												<img src="https://ghanongostar.zavoshsoftware.com/@image.ImageUrl" alt="Thumb">
											</div>
										}
						
					 
									</div>
									<div class="slider-nav">
										@foreach (var image in Model.SiteBlogImages)
										{
											<div class="">
												<img src="https://ghanongostar.zavoshsoftware.com/@image.ImageUrl" alt="Thumb">
											</div>
										}
					 
									</div>
								</div>
								<!-- /.quickview-slider -->
							</div>
						</div>
					</div>
				</article>

	 
			</div>
			<div class="col-lg-4 col-xl-4">
				<div class="blog-sidebar">
					<div class=" blog-widget">
						<h4 class="widget-title">پرفروش ترین محصولات</h4>
						
					 
						@foreach (var product in Model.SideBarProducts)
						{
							<div class="widget-post">
								<div class="widget-post-img">
									<a href="@product.Url"><img src="@product.ImageUrl" alt="@product.Title"></a>
								</div>
								<div class="widget-post-content">
									<h6 class="wid-post-title">
										<a href="@product.Url">@product.Title</a>
									</h6>
								</div>
							</div>
						}
	
						 
					</div>				
					
					<div class="blog-widget">
						<h4 class="widget-title">آخرین مطالب</h4>
						
						
						@foreach (var blog in Model.SideBarBlogs)
						{
							<div class="widget-post">
								<div class="widget-post-img">
									<a href="/blog/@blog.SiteBlogCategory.UrlParam/@blog.UrlParam"><img src="https://ghanongostar.zavoshsoftware.com/@blog.ImageUrl" alt="@blog.Title"></a>
								</div>
								<div class="widget-post-content">
									<h6 class="wid-post-title">
										<a href="/blog/@blog.SiteBlogCategory.UrlParam/@blog.UrlParam">@blog.Title</a>
									</h6>
								</div>
							</div>
						}
	
	 
					</div>
					<!-- /.blog-widget-->
					<div class="blog-widget">
						<h4 class="widget-title">گروه های مطالب</h4>
						<ul class="wid-category">
							@foreach (var blogCategory in Model.SideBarSiteBlogCategories)
							{
									<li><a href="/blog/@blogCategory.UrlParam">@blogCategory.Title</a></li>

							}
						</ul>
					</div>
 
		 
				</div>
			</div>
			<!-- /.col-xl-3 -->
		</div>
		<!-- Row End -->
	</div>
	<!-- Container  -->
</section>