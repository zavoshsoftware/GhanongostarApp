@model ViewModels.CallBackViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>پرداخت</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center pt--75 pb--80 pt-md--55 pb-md--60 pt-sm--35 pb-sm--40">
            <div class="col-lg-6">
                @if (Model.IsSuccess)
                {
                    <p class="heading-color mb--30 text-center alert alert-success">
                        پرداخت سفارش شما با موفقیت انجام شد
                    </p>
                    <div class="panel panel-primary">
                        <div class="panel-heading text-right">اطلاعات پرداحت</div>
                        <div class="panel-body text-right">
                            <table class="table table-hover">
                                <tbody>
                                    @if (Model.ProductType == "forms")
                                    {
                                        <tr>
                                            <td>دانلود: </td>
                                            <td><a class="btn btn-success" href="@Model.DownloadLink">دانلود فایل</a> </td>
                                        </tr>
                                    }

                                    <tr>
                                        <td>شماره فاکتور: </td>
                                        <td>@Model.OrderCode </td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="alert alert-info">
                                <p>
                                    با تشکر از خرید شما
                                </p>
                               @if (Model.ProductType == "forms")
                               {
                                   <p>
                                       فایل مربوطه را می توانید از طریق دکمه دانلود، دانلود فرمایید. همچنین این فایل برای ایمیل @ViewBag.Email، ارسال گردید.
                                   </p>
                               }
                               @if (Model.ProductType == "physicalproduct")
                               {
                                   <p>
                                       همکاران ما جهت هماهنگی زمان ارسال با شما تماس خواهند گرفت
                                   </p>
                               }

                            </div>
                        </div>
                    </div>

                }
                @if (!Model.IsSuccess)
                {
                    <p class="heading-color mb--30 text-center alert alert-danger">
                        خطا در انجام عملیات پرداخت
                    </p>
                    <div class="panel panel-primary">
                        <div class="panel-heading text-right">اطلاعات پرداحت</div>
                        <div class="panel-body text-right">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <td>کد خطا: </td>
                                        <td>@Model.RefrenceId </td>
                                    </tr>


                                </tbody>
                            </table>
                            <p>
                                کاربر گرامی در صورتی که مبلغ سفارش از حساب شما کسر شده است، حداکثر ظرف مدت 72 ساعت به حساب شما باز خواهد گشت. در صورت مشکل با شماره تلفن پشتیبانی تماس بگیرید.
                            </p>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</body>
</html>
